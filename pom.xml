<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://maven.apache.org/POM/4.0.0                       http://maven.apache.org/xsd/maven-4.0.0.xsd">
  <modelVersion>4.0.0</modelVersion>
  <groupId>no.lau.vdvil</groupId>
  <artifactId>root</artifactId>
  <version>0.3-SNAPSHOT</version>
  <packaging>pom</packaging>
  <name>kpro: Root</name>

    <url>http://vdvil.lau.no</url>

  <!-- Local (SVN) Maven library repository for libraries that are not found in the sentral repo -->
  <repositories>
    <repository>
      <id>local</id>
      <url>file://${basedir}/lib</url>
    </repository>
  </repositories>

  <modules>
    <module>renderer</module>
    <module>renderer.audio</module>
    <module>renderer.lyric</module>
    <!-- <module>gui</module> The QT Jambi GUI has been discontinued as a part of the standard core library -->
      <!-- Not part of the core -->
      <module>tagger-model</module>
      <module>tagger-gui</module>
  </modules>

  <!-- Common dependency management-->
    <dependencyManagement>
        <dependencies>
            <!--
            <dependency>
                <groupId>no.lau.topicmap</groupId>
                <artifactId>topicmapapi</artifactId>
                <version>0.3</version>
            </dependency>
            -->
            <dependency>
                <groupId>no.lau.vdvil</groupId>
                <artifactId>renderer</artifactId>
                <version>${project.version}</version>
            </dependency>
            <dependency>
                <groupId>no.lau.vdvil</groupId>
                <artifactId>renderer.audio</artifactId>
                <version>${project.version}</version>
            </dependency>
            <dependency>
                <groupId>no.lau.vdvil</groupId>
                <artifactId>renderer.lyric</artifactId>
                <version>${project.version}</version>
            </dependency>
            <dependency>
                <groupId>org.codehaus.groovy</groupId>
                <artifactId>groovy-all</artifactId>
                <version>1.6.4</version>
            </dependency>
            <dependency>
                <groupId>org.testng</groupId>
                <artifactId>testng</artifactId>
                <version>5.10</version>
                <scope>test</scope>
            </dependency>
        </dependencies>
    </dependencyManagement>
    <dependencies>
        <dependency>
            <groupId>junit</groupId>
            <artifactId>junit</artifactId>
            <version>4.7</version>
            <scope>test</scope>
        </dependency>
    </dependencies>

    <build>
        <plugins>
            <plugin>
                <groupId>org.apache.maven.plugins</groupId>
                <artifactId>maven-compiler-plugin</artifactId>
                <configuration>
                    <encoding>UTF-8</encoding>
                    <source>1.5</source>
                    <target>1.5</target>
                </configuration>
            </plugin>
        </plugins>
    </build>

    <scm>
        <connection>scm:git:ssh://github.com/StigLau/vdvil.git</connection>
        <developerConnection>scm:git:ssh://git@github.com/StigLau/vdvil.git</developerConnection>
        <url>http://github.com/StigLau/vdvil</url>
    </scm>

    <distributionManagement>
        <repository>
            <id>sonatype-nexus-staging</id>
            <name>Nexus Release Repository</name>
            <url>http://oss.sonatype.org/service/local/staging/deploy/maven2/</url>
        </repository>
        <snapshotRepository>
            <id>sonatype-nexus-snapshots</id>
            <name>Sonatype Nexus Snapshots</name>
            <url>http://oss.sonatype.org/content/repositories/snapshots</url>
        </snapshotRepository>
    </distributionManagement>
</project>
