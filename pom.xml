<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://maven.apache.org/POM/4.0.0                       http://maven.apache.org/xsd/maven-4.0.0.xsd">
  <modelVersion>4.0.0</modelVersion>
  <groupId>no.bouvet.kpro</groupId>
  <artifactId>root</artifactId>
  <version>0.2</version>
  <packaging>pom</packaging>
  <name>kpro: Root</name>


  <!-- Local (SVN) Maven library repository for libraries that are not found in the sentral repo -->
  <repositories>
    <repository>
      <id>local</id>
      <url>file://${basedir}/lib</url>
    </repository>
  </repositories>

  <modules>
    <module>model</module>
    <module>persistence</module>
    <module>renderer</module>
    <module>renderer.audio</module>
    <module>renderer.lyric</module>
    <module>renderer.simple</module>
    <!-- <module>gui</module> The QT Jambi GUI has been discontinued as a part of the standard core library -->
      <!-- Not part of the core -->
      <module>tagger-model</module>
      <module>tagger-gui</module>
  </modules>

  <!-- Common dependency management-->
    <dependencyManagement>
        <dependencies>
            <dependency>
                <groupId>no.bouvet.topicmap</groupId>
                <artifactId>topicmapapi</artifactId>
                <version>0.2</version>
            </dependency>
            <dependency>
                <groupId>no.bouvet.kpro</groupId>
                <artifactId>renderer</artifactId>
                <version>${project.version}</version>
            </dependency>
            <dependency>
                <groupId>no.bouvet.kpro</groupId>
                <artifactId>renderer.audio</artifactId>
                <version>${project.version}</version>
            </dependency>
            <dependency>
                <groupId>no.bouvet.kpro</groupId>
                <artifactId>renderer.lyric</artifactId>
                <version>${project.version}</version>
            </dependency>
            <dependency>
                <groupId>no.bouvet.kpro</groupId>
                <artifactId>model</artifactId>
                <version>${project.version}</version>
            </dependency>
            <dependency>
                <groupId>no.bouvet.kpro</groupId>
                <artifactId>persistence</artifactId>
                <version>${project.version}</version>
            </dependency>
            <dependency>
                <groupId>no.lau.vaudeville</groupId>
                <artifactId>tagger-model</artifactId>
                <version>0.3</version>
            </dependency>
            <dependency>
                <groupId>org.codehaus.groovy</groupId>
                <artifactId>groovy-all</artifactId>
                <version>1.6-beta-1</version>
            </dependency>
        </dependencies>
    </dependencyManagement>
    <dependencies>
        <dependency>
            <groupId>junit</groupId>
            <artifactId>junit</artifactId>
            <version>4.4</version>
            <scope>test</scope>
        </dependency>
        <dependency>
            <groupId>org.testng</groupId>
            <artifactId>testng</artifactId>
            <version>5.7</version>
            <classifier>jdk15</classifier>
            <scope>test</scope>
        </dependency>
    </dependencies>

    <build>
        <plugins>
            <plugin>
                <groupId>org.apache.maven.plugins</groupId>
                <artifactId>maven-compiler-plugin</artifactId>
                <configuration>
                    <encoding>UTF-8</encoding>
                    <source>1.5</source>
                    <target>1.5</target>
                </configuration>
            </plugin>
        </plugins>
    </build>
    <scm>
        <connection>scm:svn:https://java.bouvet.no/repos/playground/trunk/stig.lau/kpro2007</connection>
        <url>https://java.bouvet.no/repos/playground/trunk/stig.lau/kpro2007</url>
    </scm>
</project>
